{
  "name": "simple-markdown-blog",
  "version": "1.0.0",
  "description": "A simple static website with Markdown blog support",
  "main": "build.js",
  "scripts": {
    "start": "node server.js",
    "dev": "./node_modules/.bin/nodemon server.js",
    "build": "node build.js",
    "watch": "./node_modules/.bin/nodemon --watch posts --watch templates --ext md,html,css,js --exec 'npm run build'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "marked": "^11.1.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
} 